machine Lamp
{

    initial state Off
    {
        event Flick
        {
            jump On;
        }
    }
    state On
    {
        entry
        {
            print "Turning on...";
            print "Turned on", counter, " times.";
        }
        event Flick
        {
            jump Off;
        }
        exit
        {
            print "Turning off...";
        }
    }
}
